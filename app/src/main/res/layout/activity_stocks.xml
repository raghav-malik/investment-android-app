<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".StocksActivity">

    <LinearLayout
        android:id="@+id/linearLayout3"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="293dp"
            android:background="@drawable/top_background">

            <ImageView
                android:id="@+id/imageView4"
                android:layout_width="85dp"
                android:layout_height="82dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="1.0"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:srcCompat="@drawable/assettrackr" />

            <TextView
                android:id="@+id/textPortfolio"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="80dp"
                android:text="Raghav's Portfolio"
                android:textColor="@color/white"
                android:textSize="20dp"
                android:textStyle="bold"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/textassetracker"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="36dp"
                android:shadowColor="@color/black"
                android:shadowDx="3"
                android:shadowDy="3"
                android:shadowRadius="3"
                android:text="AssetTrackr"
                android:textColor="@color/white"
                android:textSize="20dp"
                android:textStyle="bold"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.043"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/textinvested"
                android:layout_width="63dp"
                android:layout_height="29dp"
                android:layout_marginTop="132dp"
                android:text="Invested"
                android:textColor="@color/white"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.08"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/textView4"
                android:layout_width="101dp"
                android:layout_height="43dp"
                android:layout_marginTop="160dp"
                android:text="TextView"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.041"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />
        </androidx.constraintlayout.widget.ConstraintLayout>

    </LinearLayout>

    <Button
        android:id="@+id/btnEquity"
        android:layout_width="386dp"
        android:layout_height="71dp"
        android:background="@drawable/btnforpurposes"
        android:drawableLeft="@drawable/equity"
        android:paddingLeft="10dp"
        android:paddingRight="230dp"
        android:text="Equity"
        android:textAlignment="center"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/btnDebt"
        android:layout_width="386dp"
        android:layout_height="71dp"
        android:layout_marginTop="15dp"
        android:background="@drawable/btnforpurposes"
        android:drawableLeft="@drawable/loan"
        android:paddingLeft="10dp"
        android:paddingRight="230dp"
        android:text="Debt"
        app:layout_constraintEnd_toEndOf="@+id/btnEquity"
        app:layout_constraintStart_toStartOf="@+id/btnEquity"
        app:layout_constraintTop_toBottomOf="@id/btnEquity" />

    <Button
        android:id="@+id/btnRealestate"
        android:layout_width="386dp"
        android:layout_height="71dp"
        android:layout_marginTop="15dp"
        android:background="@drawable/btnforpurposes"
        android:drawableLeft="@drawable/real_estate"
        android:paddingLeft="10dp"
        android:paddingRight="200dp"
        android:text="Real Estate"
        app:layout_constraintEnd_toEndOf="@+id/btnDebt"
        app:layout_constraintStart_toStartOf="@+id/btnDebt"
        app:layout_constraintTop_toBottomOf="@+id/btnDebt" />

    <Button
        android:id="@+id/btnGold"
        android:layout_width="386dp"
        android:layout_height="71dp"
        android:layout_marginTop="15dp"
        android:background="@drawable/btnforpurposes"
        android:drawableLeft="@drawable/gold"
        android:paddingLeft="10dp"
        android:paddingRight="230dp"
        android:text="Gold"
        app:layout_constraintEnd_toEndOf="@+id/btnRealestate"
        app:layout_constraintStart_toStartOf="@+id/btnRealestate"
        app:layout_constraintTop_toBottomOf="@+id/btnRealestate" />

</androidx.constraintlayout.widget.ConstraintLayout>