<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".EditProfile">

    <LinearLayout
        android:id="@+id/linearLayout4"
        android:layout_width="410dp"
        android:layout_height="288dp"
        android:background="@drawable/top_background"
        android:orientation="vertical">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/texteditprofile"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Edit Profile"
                android:textColor="@color/white"
                android:textSize="30dp"
                android:textStyle="bold"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.501"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="0.209" />

            <TextView
                android:id="@+id/textaccount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Acc ID: XXXXX"
                android:textColor="@color/white"
                android:textSize="20sp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.788"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="0.54" />

            <ImageView
                android:id="@+id/imageView5"
                android:layout_width="149dp"
                android:layout_height="107dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.272"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="0.657"
                app:srcCompat="@drawable/pawanpic" />

        </androidx.constraintlayout.widget.ConstraintLayout>
    </LinearLayout>

    <Button
        android:id="@+id/btnEditName"
        android:layout_width="92dp"
        android:layout_height="32dp"
        android:layout_marginStart="16dp"
        android:background="@drawable/btnforeditpurposes"
        android:text="Name"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.487" />

    <EditText
        android:id="@+id/edittextname"
        android:layout_width="200dp"
        android:layout_height="34dp"
        android:background="@drawable/btnforpurposes"
        android:ems="10"
        android:inputType="text"
        android:text="Raghav Malik"
        android:textAlignment="center"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@+id/btnEditName"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.488" />

    <Button
        android:id="@+id/button2"
        android:layout_width="94dp"
        android:layout_height="33dp"
        android:background="@drawable/btnforeditpurposes"
        android:text="Edit"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@+id/edittextname"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.489" />

    <Button
        android:id="@+id/btneditemail"
        android:layout_width="92dp"
        android:layout_height="32dp"
        android:layout_marginTop="26dp"
        android:background="@drawable/btnforeditpurposes"
        android:text="Email"
        app:layout_constraintEnd_toEndOf="@+id/btnEditName"
        app:layout_constraintStart_toStartOf="@+id/btnEditName"
        app:layout_constraintTop_toBottomOf="@+id/btnEditName" />

    <EditText
        android:id="@+id/edittextemail"
        android:layout_width="202dp"
        android:layout_height="33dp"
        android:layout_marginTop="24dp"
        android:background="@drawable/btnforpurposes"
        android:ems="10"
        android:inputType="text"
        android:text="malikraghav@gmail.com"
        android:textAlignment="center"
        app:layout_constraintEnd_toEndOf="@+id/edittextname"
        app:layout_constraintStart_toEndOf="@+id/btnEditName"
        app:layout_constraintTop_toBottomOf="@+id/edittextname" />

    <Button
        android:id="@+id/editemailbtn"
        android:layout_width="94dp"
        android:layout_height="33dp"
        android:layout_marginTop="24dp"
        android:background="@drawable/btnforeditpurposes"
        android:text="Edit"
        app:layout_constraintEnd_toEndOf="@+id/button2"
        app:layout_constraintStart_toEndOf="@+id/edittextname"
        app:layout_constraintTop_toBottomOf="@+id/button2" />

    <Button
        android:id="@+id/btneditmobile"
        android:layout_width="92dp"
        android:layout_height="32dp"
        android:layout_marginTop="26dp"
        android:background="@drawable/btnforeditpurposes"
        android:text="Mobile"
        app:layout_constraintEnd_toEndOf="@+id/btneditemail"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/btneditemail"
        app:layout_constraintTop_toBottomOf="@+id/btneditemail" />

    <EditText
        android:id="@+id/mobiletext"
        android:layout_width="204dp"
        android:layout_height="34dp"
        android:layout_marginTop="24dp"
        android:background="@drawable/btnforpurposes"
        android:ems="10"
        android:inputType="text"
        android:text="9999999999"
        android:textAlignment="center"
        app:layout_constraintEnd_toEndOf="@+id/edittextemail"
        app:layout_constraintHorizontal_bias="0.333"
        app:layout_constraintStart_toEndOf="@+id/btneditemail"
        app:layout_constraintTop_toBottomOf="@+id/edittextemail" />

    <Button
        android:id="@+id/btneditmobile2"
        android:layout_width="94dp"
        android:layout_height="33dp"
        android:layout_marginTop="24dp"
        android:background="@drawable/btnforeditpurposes"
        android:text="EDIT"
        app:layout_constraintEnd_toEndOf="@+id/editemailbtn"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toEndOf="@+id/edittextemail"
        app:layout_constraintTop_toBottomOf="@+id/editemailbtn" />

    <Button
        android:id="@+id/btndob"
        android:layout_width="92dp"
        android:layout_height="32dp"
        android:layout_marginTop="26dp"
        android:background="@drawable/btnforeditpurposes"
        android:text="D.O.B"
        app:layout_constraintEnd_toEndOf="@+id/btneditmobile"
        app:layout_constraintStart_toStartOf="@+id/btneditmobile"
        app:layout_constraintTop_toBottomOf="@+id/btneditmobile" />

    <EditText
        android:id="@+id/textdob"
        android:layout_width="204dp"
        android:layout_height="32dp"
        android:layout_marginTop="24dp"
        android:background="@drawable/btnforpurposes"
        android:ems="10"
        android:inputType="text"
        android:text="8 October 2004"
        android:textAlignment="center"
        app:layout_constraintEnd_toStartOf="@+id/btneditmobile2"
        app:layout_constraintStart_toEndOf="@+id/btneditmobile"
        app:layout_constraintTop_toBottomOf="@+id/mobiletext" />

    <Button
        android:id="@+id/btndobedit"
        android:layout_width="94dp"
        android:layout_height="33dp"
        android:layout_marginTop="24dp"
        android:background="@drawable/btnforeditpurposes"
        android:text="Edit"
        app:layout_constraintEnd_toEndOf="@+id/btneditmobile2"
        app:layout_constraintStart_toEndOf="@+id/mobiletext"
        app:layout_constraintTop_toBottomOf="@+id/btneditmobile2" />

    <ImageView
        android:id="@+id/imageView7"
        android:layout_width="158dp"
        android:layout_height="126dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout4"
        app:layout_constraintVertical_bias="0.949"
        app:srcCompat="@drawable/assetracker" />
</androidx.constraintlayout.widget.ConstraintLayout>